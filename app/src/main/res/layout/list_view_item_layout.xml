<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150px"
            android:layout_height="100px"
            android:id="@+id/imageView"
            android:src="@mipmap/lady_bird" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="152dp"
            android:layout_height="150dp"
            android:weightSum="1">

            <TextView
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:id="@+id/txtClaimTitle"
                android:layout_weight="0.03"
                android:textSize="40px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BBQ Central"
                android:id="@+id/txtClaimCenter"
                android:textSize="40px"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 9, 2016"
                android:id="@+id/txtClaimDate"
                android:textSize="40px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ksh 250"
                android:id="@+id/txtClaimAmount"
                android:textSize="40px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>